{% extends "frontbase.html.twig" %}

{% block body %}
    <main>
        {% for pub in p %}
            <div class="container">
                <div class="row">
                    <div class="col-md-9 col-sm-12 col-xs-12">
                        <div class="blog-item-style-1 blog-item-style-3">
                            <img src="{{ asset('front/images/uploads/bloglist-it1.jpg')}}" alt="">
                            <div class="blog-it-infor">
                                <h3><a href="{{ path("pub_item",{id:pub.idpub}) }}">{{pub.topic}}</a></h3>
                                <span class="time">{{pub.datepub | date("m/d/y")}}</span>
                                <p>{{pub.texte}}</p>
                                <p>{{pub.rating}}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}



    </main>
{% endblock %}
